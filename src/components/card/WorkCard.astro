---
import type {WorkExperience} from "../../types/ResumeTypes";
import Card from "./Card.astro";

interface Props {
    work: WorkExperience[];
}

const {work} = Astro.props;
---

<Card title="Work">
    <ul class="list">
        {work.map((item) => (
                <li class="element">
                    <div class="experience">
                        <p class="title">{item.name}</p>
                        <p class="time">{item.time}</p>
                    </div>
                    <p class="role">{item.role}</p>
                </li>
        ))}
    </ul>
</Card>

<style>

    @media only screen and (max-width: 400px) {
        .list {
            .element {
                .experience {
                    flex-direction: column;

                    .time {
                        margin-left: unset;
                    }
                }
            }
        }
    }

    .list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-top: 0.3rem;

        .element {
            display: flex;
            flex-direction: column;
            color: var(--subtitle);

            & .experience {
                display: flex;
                text-wrap: nowrap;
            }

            & .title {
                color: var(--title);
            }


            & .time {
                margin-left: auto;
            }
        }
    }

    ul {
        padding-inline-start: 0;
    }

    p {
        margin-block: 0;
    }
</style>