---
import Layout from '../layouts/Layout.astro';

interface WorkExperience {
    name: string,
    role: string,
    time: string
}

interface ResumeConfig {
    headline: string,
    workExperience: WorkExperience[],
    links: {
        [key: string]: string
    }
}

const config: ResumeConfig = {
    headline: "- Software Engineer<br>- Computer Science student @ <a target=\"_blank\" href=\"https://www.helsinki.fi/\">University of Helsinki</a>.<br><br>Based in ðŸ‡«ðŸ‡® Finland",
    workExperience: [
        {
            name: "Vyce Games",
            role: "Java Developer",
            time: "July 2024 - September 2024"
        },
        {
            name: "SpeedSilver Limited",
            role: "Server Developer",
            time: "November 2022 - February 2023"
        }
    ],
    links: {
        GitHub: "https://github.com/Septicuss",
        X: "https://x.com/Septicuss",
        LinkedIn: "https://www.linkedin.com/in/balaban-vladis/"
    }
}
---

<Layout>

    <div id="container">
        <main>

            <div id="hero">
                <h1>Vladislav Balaban</h1>
                <span id="aka">Septicuss</span>
            </div>

            <div id="about" class="card">
                <span class="card-title">About</span>
                <br><br>
                <p set:html={config.headline}/>
            </div>

            <div id="work" class="card">
                <span class="card-title">Work</span>
                <ul class="experiences">
                    {config.workExperience.map((item) => (
                            <li class="experience">
                                <div class="experience-title">
                                    <p class="title">{item.name}</p>
                                    <p class="time">{item.time}</p>
                                </div>
                                <p class="role">{item.role}</p>
                            </li>
                    ))}
                </ul>
            </div>

            <div id="links" class="card">
                <span class="card-title">Links</span>
                {Object.entries(config.links).map((value) => (
                        <a class="link" title=`Link to my page on ${value[0]}` target="_blank" href={value[1]}>{value[0]}</a>
                ))}
            </div>

        </main>

    </div>

</Layout>

<style>



    * {
        font-family: monospace;
        --title: #000000;
        --subtitle: darkgray;
    }

    .card {
        width: 100%;
        padding: 0.6rem;
        margin-top: 1rem;
        font-family: monospace;
        border-radius: 16px;
        border-width: 1px;
        background-color: #fafafa;
        outline: 1px solid #1f1f1f;
        overflow: hidden;

        & .card-title {
            color: #5c5c5c;
        }

        & p {
            margin-block: 0;
        }

    }

    #work {

        & .experiences {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding-top: 0.3rem;
            padding-inline-start: 0;

            & .experience {
                display: flex;
                flex-direction: column;
                color: var(--subtitle);

                & .experience-title {
                    display: flex;
                    text-wrap: nowrap;


                    & .title {
                        color: var(--title);
                    }

                    & .time {
                        margin-left: auto;
                        color: var(--subtitle);
                    }

                }


            }

        }

    }

    #links {
        display: flex;
        gap: 1rem;

        .link {

        }
    }

    #hero {
        h1 {
            margin-bottom: 0;
        }
        #aka {
            color: var(--subtitle);
        }
    }

    main {
        display: flex;
        align-items: start;
        flex-direction: column;
        justify-content: center;
        max-width: 30rem;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 2rem;
    }

    #background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    #container {
        font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
        height: 100%;
    }

    pre {
        font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas,
        'DejaVu Sans Mono', monospace;
        font-weight: normal;
        background: linear-gradient(14deg, #d83333 0%, #f041ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }
</style>
